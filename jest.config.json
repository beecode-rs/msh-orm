{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.{contract,d}.ts"
  ],
  "maxConcurrency": 1,
  "preset": "ts-jest",
  "roots": [
    "<rootDir>/src"
  ],
  "setupFilesAfterEnv": [
    "jest-extended/all"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/src/**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ]
}
